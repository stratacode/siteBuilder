<html>
    <body>
        <div visible=":= CurrentUser.loginStatus==LoginStatus.NotLoggedIn">
            <input type="text" placeholder="username" value=":=: CurrentUser.username">
            <input type="text" placeholder="password" value=":=: CurrentUser.password">
            <input type="submit" value="Log in!" clickEvent="=: CurrentUser.login()">
        </div>
        <div visible=":= CurrentUser.loginStatus!=LoginStatus.NotLoggedIn">
            <input type="submit" value="Log out!" clickEvent="=: CurrentUser.logout()">
        </div>
    </body>
</html>
